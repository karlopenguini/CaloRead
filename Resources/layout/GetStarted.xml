<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="20dp">
    <LinearLayout
        android:orientation="vertical"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout1"
        android:layout_marginTop="140dp"
        android:layout_marginBottom="30dp">
        <TextView
            android:text="Let's get you"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorSpanishVeridian"
            android:textSize="32dp"
            android:id="@+id/textView1" />
        <TextView
            android:text="started."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBitterLemon"
            android:textSize="32dp"
            android:id="@+id/textView2" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/LL_Container">
        <LinearLayout
            android:orientation="vertical"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="36dp"
            android:id="@+id/LL_Credentials">
            <LinearLayout
                android:orientation="vertical"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/LL_Username"
                android:layout_marginBottom="12dp">
                <TextView
                    android:text="USERNAME"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textFontWeight="200"
                    android:textColor="@color/colorSpanishVeridian"
                    android:id="@+id/TV_UsernameLbl"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:textFontWeight="200"
                    android:maxLines="1"
                    android:backgroundTint="@color/colorSpanishVeridian"
                    android:textColor="@color/colorSpanishVeridian"
                    android:id="@+id/ET_Username"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/LL_Password">
                <TextView
                    android:text="PASSWORD"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textFontWeight="200"
                    android:textColor="@color/colorSpanishVeridian"
                    android:id="@+id/TV_PasswordLbl"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:textFontWeight="200"
                    android:backgroundTint="@color/colorSpanishVeridian"
                    android:textColor="@color/colorSpanishVeridian"
                    android:id="@+id/ET_Password"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/LL_Buttons"
            android:gravity="center">
            <LinearLayout
                android:orientation="vertical"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/linearLayout2">
                <TextView
                    android:text="WEIGHT (KG)"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textFontWeight="200"
                    android:textColor="@color/colorSpanishVeridian"
                    android:id="@+id/TV_PasswordLbl"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:textFontWeight="200"
                    android:backgroundTint="@color/colorSpanishVeridian"
                    android:textColor="@color/colorSpanishVeridian"
                    android:id="@+id/ET_Password"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/linearLayout3">
                <TextView
                    android:text="HEIGHT (CM)"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textFontWeight="200"
                    android:textColor="@color/colorSpanishVeridian"
                    android:id="@+id/TV_PasswordLbl"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:textFontWeight="200"
                    android:backgroundTint="@color/colorSpanishVeridian"
                    android:textColor="@color/colorSpanishVeridian"
                    android:id="@+id/ET_Password"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/linearLayout4">
                <TextView
                    android:text="GENDER"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textFontWeight="200"
                    android:textColor="@color/colorSpanishVeridian"
                    android:id="@+id/TV_PasswordLbl"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:textFontWeight="200"
                    android:backgroundTint="@color/colorSpanishVeridian"
                    android:textColor="@color/colorSpanishVeridian"
                    android:id="@+id/ET_Password"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
