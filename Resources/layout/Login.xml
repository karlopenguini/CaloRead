<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:minWidth="25px"
    android:minHeight="25px"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/LL_Main"
    android:layout_gravity="center"
    android:paddingHorizontal="20dp">
    <LinearLayout
        android:orientation="horizontal"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginBottom="96dp"
        android:id="@+id/LL_Logo">
        <TextView
            android:text="Calo"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="64dp"
            android:textFontWeight="900"
            android:textColor="@color/colorSpanishVeridian"
            android:id="@+id/TV_Calo" />
        <TextView
            android:text="Read"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="64dp"
            android:textFontWeight="900"
            android:textColor="@color/colorGreenRYB"
            android:id="@+id/TV_Read" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/LL_Container">
        <LinearLayout
            android:orientation="vertical"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="36dp"
            android:id="@+id/LL_Credentials">
            <LinearLayout
                android:orientation="vertical"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/LL_Username"
                android:layout_marginBottom="12dp">
                <TextView
                    android:text="USERNAME"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textFontWeight="200"
                    android:id="@+id/TV_UsernameLbl"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:textFontWeight="200"
                    android:maxLines="1"
                    android:textColor="@color/colorSpanishVeridian"
                    android:id="@+id/ET_Username"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/LL_Password">
                <TextView
                    android:text="PASSWORD"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textFontWeight="200"
                    android:textColor="@color/colorSpanishVeridian"
                    android:id="@+id/TV_PasswordLbl"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:textFontWeight="200"
                    android:textColor="@color/colorSpanishVeridian"
                    android:id="@+id/ET_Password"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/LL_Buttons">
            <Button
                android:text="SIGN IN"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:id="@+id/BTN_SignIn"
                android:layout_marginBottom="6dp"
                android:textFontWeight="200"
                android:background="@color/colorDarkGreen"
                android:textColor="@android:color/white"
                />
            <Button
                android:text="REGISTER"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:textSize="24dp"
                android:textFontWeight="200"
                android:background="@color/colorAppleGreen"
                android:textColor="@android:color/white"
                android:id="@+id/BTN_Register" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>