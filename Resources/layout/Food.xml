<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:minWidth="25px"
    android:minHeight="25px"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/RL_Main"
    android:paddingTop="100dp">

    <LinearLayout
        android:orientation="vertical"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/LL_Container">

        <TextView
            android:text="My Food Data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorSpanishVeridian"
            android:textSize="32dp" />

        <RelativeLayout
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:layout_marginTop="10dp"
            android:id="@+id/LL_Add_Food"
            android:clickable="true"
            android:background="@drawable/add_food_container">

            <TextView
                android:text="ADD FOOD"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="40px"
                android:textFontWeight="200"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="20dp"
                android:textColor="@color/colorSpanishVeridian"
                android:id="@+id/TV_kcalLbl"
                android:gravity="center" />

            <ImageButton
                android:src="@drawable/addpluscircle"
                android:layout_width="25dp"
                android:layout_height="match_parent"
                android:layout_marginRight="18dp"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:id="@+id/BTN_ConfirmRegistration"
                android:background="@android:color/transparent"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>
        <LinearLayout
            android:orientation="vertical"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/LL_Food">
            <LinearLayout
                android:orientation="vertical"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="16dp"
                android:paddingVertical="6dp"
                android:background="@drawable/food_card"
                android:id="@+id/LL_FoodCard">
                <RelativeLayout
                    android:minWidth="25px"
                    android:minHeight="25px"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/RL_FoodNameCal">

                    <TextView
                        android:text="Food Name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="40px"
                        android:textFontWeight="200"
                        android:layout_alignParentLeft="true"
                        android:textColor="@color/colorBitterLemon"
                        android:id="@+id/TV_Name"
                        android:gravity="center" />

                    <TextView
                        android:text="100 kcal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="40px"
                        android:textFontWeight="200"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/colorBitterLemon"
                        android:id="@+id/TV_kcal"
                        android:gravity="center" />
                </RelativeLayout>

                <RelativeLayout
                    android:minWidth="25px"
                    android:minHeight="25px"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:id="@+id/RL_FoodInfo">

                    <TextView
                        android:text="50g"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="35px"
                        android:textFontWeight="200"
                        android:layout_centerVertical="true"
                        android:textColor="@android:color/white"
                        android:id="@+id/TV_Grams" />

                    <LinearLayout
                        android:orientation="horizontal"
                        android:minWidth="25px"
                        android:minHeight="25px"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:id="@+id/LL_Nutrition"
                        android:gravity="center|right">>

                        <LinearLayout
                            android:orientation="vertical"
                            android:minWidth="25px"
                            android:minHeight="25px"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:id="@+id/LL_Protein"
                            android:gravity="center|right">

                            <TextView
                            android:text="50g"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="35px"
                            android:textFontWeight="200"
                            android:layout_alignParentLeft="true"
                            android:textColor="@android:color/white"
                            android:id="@+id/TV_ProteinGrams"
                            android:gravity="center" />

                            <TextView
                            android:text="PROTEIN"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="35px"
                            android:textFontWeight="200"
                            android:layout_alignParentLeft="true"
                            android:textColor="@android:color/white"
                            android:id="@+id/TV_ProteinLbl"
                            android:gravity="center" />

                        </LinearLayout>

                        <LinearLayout
                            android:orientation="vertical"
                            android:minWidth="25px"
                            android:minHeight="25px"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:id="@+id/LL_Carbs"
                            android:gravity="center|right">

                            <TextView
                            android:text="50g"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="35px"
                            android:textFontWeight="200"
                            android:layout_alignParentLeft="true"
                            android:layout_marginLeft="20dp"
                            android:textColor="@android:color/white"
                            android:id="@+id/TV_CarbsGrams"
                            android:gravity="center" />

                            <TextView
                            android:text="CARBS"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="35px"
                            android:textFontWeight="200"
                            android:layout_alignParentLeft="true"
                            android:layout_marginLeft="20dp"
                            android:textColor="@android:color/white"
                            android:id="@+id/TV_CarbsLbl"
                            android:gravity="center" />
                        </LinearLayout>

                        <LinearLayout
                            android:orientation="vertical"
                            android:minWidth="25px"
                            android:minHeight="25px"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:id="@+id/LL_Fat"
                            android:gravity="center|right">

                            <TextView
                            android:text="50g"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="35px"
                            android:textFontWeight="200"
                            android:layout_alignParentLeft="true"
                            android:layout_marginLeft="20dp"
                            android:textColor="@android:color/white"
                            android:id="@+id/TV_FatGrams"
                            android:gravity="center" />

                            <TextView
                            android:text="FAT"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="35px"
                            android:textFontWeight="200"
                            android:layout_alignParentLeft="true"
                            android:layout_marginLeft="20dp"
                            android:textColor="@android:color/white"
                            android:id="@+id/TV_FatLbl"
                            android:gravity="center" />
                        </LinearLayout>

                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
