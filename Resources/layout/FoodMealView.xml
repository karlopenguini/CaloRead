<?xml version="1.0" encoding="utf-8" ?>


<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:minWidth="25px"
    android:minHeight="25px"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/FoodMealCard">
    <LinearLayout
        android:orientation="vertical"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="16dp"
        android:paddingVertical="6dp"
        android:background="@drawable/food_card"
        android:id="@+id/LL_FoodCard">


        <RelativeLayout
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/RL_FoodNameCal">

            <TextView
                android:text="Food Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="40px"
                android:textFontWeight="200"
                android:layout_alignParentLeft="true"
                android:textColor="@color/colorBitterLemon"
                android:id="@+id/TV_FoodName_Recycler"
                android:gravity="center" />

            <TextView
                android:text="100 kcal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="40px"
                android:textFontWeight="200"
                android:layout_alignParentRight="true"
                android:textColor="@color/colorBitterLemon"
                android:id="@+id/TV_kcal_Recycler"
                android:gravity="center" />
        </RelativeLayout>

        <RelativeLayout
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/RL_FoodInfo">

            <TextView
                android:text="50g"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="35px"
                android:textFontWeight="200"
                android:layout_centerVertical="true"
                android:textColor="@android:color/white"
                android:id="@+id/TV_Grams_Recycler" />

            <LinearLayout
                android:orientation="horizontal"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:id="@+id/LL_Nutrition"
                android:gravity="center|right">
                <LinearLayout
                    android:orientation="vertical"
                    android:minWidth="25px"
                    android:minHeight="25px"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:id="@+id/LL_Protein"
                    android:gravity="center|right">

                    <TextView
                        android:text="50g"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="35px"
                        android:textFontWeight="200"
                        android:layout_alignParentLeft="true"
                        android:textColor="@android:color/white"
                        android:id="@+id/TV_ProteinGrams_Recycler"
                        android:gravity="center" />

                    <TextView
                        android:text="PROTEIN"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="35px"
                        android:textFontWeight="200"
                        android:layout_alignParentLeft="true"
                        android:textColor="@android:color/white"
                        android:id="@+id/TV_ProteinLbl"
                        android:gravity="center" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:minWidth="25px"
                    android:minHeight="25px"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:id="@+id/LL_Carbs"
                    android:gravity="center|right">

                    <TextView
                        android:text="50g"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="35px"
                        android:textFontWeight="200"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="20dp"
                        android:textColor="@android:color/white"
                        android:id="@+id/TV_CarbsGrams_Recycler"
                        android:gravity="center" />

                    <TextView
                        android:text="CARBS"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="35px"
                        android:textFontWeight="200"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="20dp"
                        android:textColor="@android:color/white"
                        android:id="@+id/TV_CarbsLbl"
                        android:gravity="center" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:minWidth="25px"
                    android:minHeight="25px"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:id="@+id/LL_Fat"
                    android:gravity="center|right">

                    <TextView
                        android:text="50g"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="35px"
                        android:textFontWeight="200"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="20dp"
                        android:textColor="@android:color/white"
                        android:id="@+id/TV_FatGrams_Recycler"
                        android:gravity="center" />

                    <TextView
                        android:text="FAT"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="35px"
                        android:textFontWeight="200"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="20dp"
                        android:textColor="@android:color/white"
                        android:id="@+id/TV_FatLbl"
                        android:gravity="center" />
                </LinearLayout>

            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</FrameLayout>



    
