<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:minWidth="25px"
    android:minHeight="25px"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/LL_Main"
    android:paddingHorizontal="20dp">
    <LinearLayout
        android:orientation="vertical"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/LL_Title"
        android:layout_marginTop="90dp"
        android:layout_marginBottom="30dp">
        <TextView
            android:text="Let's get you"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorSpanishVeridian"
            android:textSize="32dp" />
        <TextView
            android:text="started."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBitterLemon"
            android:textSize="32dp" />
        <LinearLayout
            android:orientation="vertical"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:id="@+id/LL_Container">
            <LinearLayout
                android:orientation="vertical"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="36dp"
                android:id="@+id/LL_Credentials">
                <LinearLayout
                    android:orientation="vertical"
                    android:minWidth="25px"
                    android:minHeight="25px"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/LL_Username"
                    android:layout_marginBottom="12dp">
                    <TextView
                        android:text="USERNAME"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textFontWeight="200"
                        android:textColor="@color/colorSpanishVeridian"
                        android:id="@+id/TV_UsernameLbl"/>
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:textFontWeight="200"
                        android:maxLines="1"
                        android:backgroundTint="@color/colorSpanishVeridian"
                        android:textColor="@color/colorSpanishVeridian"
                        android:id="@+id/ET_Username_Register"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:minWidth="25px"
                    android:minHeight="25px"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/LL_Password">
                    <TextView
                        android:text="PASSWORD"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textFontWeight="200"
                        android:textColor="@color/colorSpanishVeridian"
                        android:id="@+id/TV_PasswordLbl"/>
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPassword"
                        android:maxLines="1"
                        android:textFontWeight="200"
                        android:backgroundTint="@color/colorSpanishVeridian"
                        android:textColor="@color/colorSpanishVeridian"
                        android:id="@+id/ET_Password_Register"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/LL_Data"
                android:gravity="center">
                <Space
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" >
                </Space>
                <LinearLayout
                    android:orientation="vertical"
                    android:minWidth="25px"
                    android:minHeight="25px"
                    android:layout_width="150px"
                    android:layout_height="200px"
                    android:id="@+id/LL_Weight"
                    android:gravity="center|top"
                    >
                    <TextView
                        android:text="WEIGHT (KG)"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textFontWeight="200"
                        android:gravity="center"
                        android:textColor="@color/colorSpanishVeridian"
                        android:id="@+id/TV_WeightLBL"/>
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"
                        android:maxLines="1"
                        android:textFontWeight="200"
                        android:backgroundTint="@color/colorSpanishVeridian"
                        android:textColor="@color/colorSpanishVeridian"
                        android:id="@+id/ET_Weight_Register"/>
                </LinearLayout>
                <Space
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" >
                </Space>
                <LinearLayout
                    android:orientation="vertical"
                    android:minWidth="25px"
                    android:minHeight="25px"
                    android:layout_width="150px"
                    android:layout_height="200px"
                    android:id="@+id/LL_Height"
                    android:gravity="center|top"
                    >
                    <TextView
                        android:text="HEIGHT (CM)"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textFontWeight="200"
                        android:gravity="center"
                        android:textColor="@color/colorSpanishVeridian"
                        android:id="@+id/TV_HeightLbl"/>
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"
                        android:maxLines="1"
                        android:textFontWeight="200"
                        android:backgroundTint="@color/colorSpanishVeridian"
                        android:textColor="@color/colorSpanishVeridian"
                        android:id="@+id/ET_Height_Register"/>
                </LinearLayout>
                <Space
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" >
                </Space>
                <LinearLayout
                    android:orientation="vertical"
                    android:minWidth="25px"
                    android:minHeight="25px"
                    android:layout_width="150px"
                    android:layout_height="200px"
                    android:id="@+id/LL_Gender"
                    android:gravity="center|top"
                    
                    >
                    <TextView
                        android:text="GENDER"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textFontWeight="200"
                        android:gravity="center"
                        android:layout_marginBottom="16.5dp"
                        android:textColor="@color/colorSpanishVeridian"
                        android:id="@+id/TV_GenderLbl"/>
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:textFontWeight="200"
                        android:backgroundTint="@color/colorSpanishVeridian"
                        android:textColor="@color/colorSpanishVeridian"
                        android:id="@+id/ET_Gender_Register"/>
                </LinearLayout>
                <Space
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" >
                </Space>
                <LinearLayout
                    android:orientation="vertical"
                    android:minWidth="25px"
                    android:minHeight="25px"
                    android:layout_width="150px"
                    android:layout_height="200px"
                    android:id="@+id/LL_Age"
                    android:gravity="center|top"
                    >
                    <TextView
                        android:text="AGE"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textFontWeight="200"
                        android:layout_marginBottom="16.5dp"
                        android:gravity="center"
                        android:textColor="@color/colorSpanishVeridian"
                        android:id="@+id/TV_AgeLBL"/>
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:maxLines="1"
                        android:textFontWeight="200"
                        android:backgroundTint="@color/colorSpanishVeridian"
                        android:textColor="@color/colorSpanishVeridian"
                        android:id="@+id/ET_Age_Register"/>
                </LinearLayout>
                <Space
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" >
                </Space>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tableRow1"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp">

        <ImageButton
            android:src="@drawable/ArrowCircleRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/BTN_Next"
            android:background="@android:color/transparent"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
</RelativeLayout>